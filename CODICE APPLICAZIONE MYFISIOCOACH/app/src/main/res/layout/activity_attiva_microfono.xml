<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BluFisio"
    tools:context=".AttivaMicrofonoActivity">

  <ImageView
      android:id="@+id/tornaMicrofonoIndietroButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      app:layout_constraintEnd_toStartOf="@+id/imageView10"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/baseline_chevron_left_24" />

  <ImageView
      android:id="@+id/imageView10"
      android:layout_width="188dp"
      android:layout_height="96dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/symbolmyfisiocoach" />

  <TextView
      android:id="@+id/textView29"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="35dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="34dp"
      android:text="Dialoga con il tuo coach"
      android:textColor="@color/white"
      android:textSize="32sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView10"
      tools:ignore="MissingConstraints" />

  <TextView
      android:id="@+id/textView30"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:fontFamily="sans-serif-medium"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:text="Concedendo l'accesso al microfono, potrai dialogare con l'avatar, rendendo il tuo percorso più personalizzato e coinvolgente. Questo aiuto ti permetterà di migliorare costantemente e segnalare eventuali difficoltà nei vari esercizi per progredire al meglio."
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="22sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView29" />

  <Switch
      android:id="@+id/switchbuttonMicrofono"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="66dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="62dp"
      android:switchPadding="10dp"
      android:text="Attiva microfono"
      android:textColor="@color/GrigioDisattivo"
      android:textSize="30sp"
      android:textStyle="bold"
      android:thumbTint="@color/switch_style"
      android:trackTint="@color/switch_style"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView30" />

  <Button
      android:id="@+id/AttivaInSeguitoMicrofonoButton"
      android:layout_width="270dp"
      android:layout_height="35dp"
      android:layout_marginStart="71dp"
      android:layout_marginEnd="70dp"
      android:layout_marginBottom="30dp"
      android:background="@drawable/stylebutton"
      android:drawableEnd="@drawable/baseline_cancel_24"
      android:drawableTint="@color/BluFisio"
      android:paddingTop="3dp"
      android:paddingEnd="10dp"
      android:text="ATTIVA IN SEGUITO"
      android:textAlignment="center"
      android:textColor="@color/BluFisio"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/avanzaButtonMicorfono"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/switchbuttonMicrofono"
      app:layout_constraintVertical_bias="1.0" />

  <Button
      android:id="@+id/avanzaButtonMicorfono"
      android:layout_width="270dp"
      android:layout_height="35dp"
      android:layout_marginBottom="30dp"
      android:background="@drawable/stylebutton"
      android:backgroundTint="@color/GrigioDisattivo"
      android:drawableEnd="@drawable/right_arrow"
      android:drawableTint="@color/white"
      android:paddingTop="3dp"
      android:paddingEnd="10dp"
      android:text="AVANZA"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>