<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BluFisio"
    tools:context=".ImpostazioniActivity">

    <Button
        android:id="@+id/AttivaInSeguitoButton"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/stylebutton"
        android:drawableEnd="@drawable/baseline_cancel_24"
        android:drawableTint="@color/BluFisio"
        android:paddingTop="3dp"
        android:paddingEnd="10dp"
        android:text="ATTIVA IN SEGUITO"
        android:textAlignment="center"
        android:textColor="@color/BluFisio"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/avanzaButtonNotifiche"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchbuttonNotifiche"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/tornaLoginIndietroButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView10"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_chevron_left_24" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="188dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/symbolmyfisiocoach" />

    <Button
        android:id="@+id/avanzaButtonNotifiche"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/stylebutton"
        android:backgroundTint="@color/GrigioDisattivo"
        android:drawableEnd="@drawable/right_arrow"
        android:drawableTint="@color/white"
        android:paddingTop="3dp"
        android:paddingEnd="10dp"
        android:text="AVANZA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Pianifica i tuoi esercizi"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Per ottenere progressi costanti, Ã¨ fondamentale restare motivati! Abilita sia notifiche che sveglie e scegli un orario in cui riceverai un promemoria per il tuo primo allenamento giornaliero. In questo modo, avrai un aiuto quotidiano per mantenere la costanza e raggiungere i tuoi obiettivi!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/switchbuttonNotifiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:switchPadding="10dp"
        android:text="Attiva notifiche"
        android:textColor="@color/GrigioDisattivo"
        android:textSize="30sp"
        android:textStyle="bold"
        android:thumbTint="@color/switch_style"
        android:trackTint="@color/switch_style"
        app:layout_constraintEnd_toEndOf="@+id/textView17"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

</androidx.constraintlayout.widget.ConstraintLayout>